<h1>Your Account</h1>

<%= render partial: "shared/user_profile" %>

<h3><%= current_user.username %>'s Order History</h3>
<% if @order %>
  <%= render partial: "order_table", locals: { order: @order } %>
<% end %>

<h4>Previous Orders:</h4>
  <ul class="col-md-4 list-group">
    <% current_user.orders.each do |order| %>
      <li class="list-group-item"><%= link_to "Order #{order.id}", order_path(order) %></li>
    <% end %>
  </ul>