<h1>Cart Summary</h1>

<div class="cart-items">
  <%= raw(flash[:delete]) %>
  <% @creatures.each do |creature| %>
    <p><%= creature.name %></p>
    <p>price:<%= creature.price %></p>
    <p>quantity: <%= @cart.count_of(creature.id) %></p>
    <p><%= creature.description %></p>
    <%= button_to "+", cart_path(add: creature.id), method: :put %>
    <%= button_to "-", cart_path(remove: creature.id), method: :put %>
    <%= link_to "Remove", cart_path(creature_id: creature.id), method: :delete %>
    <%= image_tag("#{creature.name}.png", width: 100) %>
  <% end %>
</div>

<div class="cart-total">
  <p>
    <% if @cart %>
      Total: <%= number_to_currency(@cart.total_price) %>
    <% else %>
      Total: $0.00
    <% end %>
  </p>
</div>

<div class="btn-default">
  <% if current_user %>
    <%= button_to "Checkout", orders_path(contents: session[:cart]), method: :create %>
  <% else %>
    <%= button_to "Login to Checkout", login_path, method: :get %>
    <%= button_to "Register to Checkout", new_user_path, method: :get %>
  <% end %>
</div>
