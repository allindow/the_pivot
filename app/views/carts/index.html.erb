<h1>Cart Summary</h1>
</br>

<div class="table-responsive">
  <table class="col-md-10 table">
    <%= raw(flash[:delete]) %>
    <thead>
    <tbody>
      <tr>
        <td>Creature</td>
        <td>Description</td>
        <td>Quantity</td>
        <td>Price</td>
        <td>Subtotal</td>
      </tr>
    </thead>
    <% @creatures.each do |creature| %>
    <tr>
      <td class="col-md-2"><%= image_tag("#{creature.name}.png", width: 100) %></br>
        <%= creature.name %></br>
        <%= link_to "Remove From Cart", cart_path(creature_id: creature.id), method: :delete %>
      </td>
      <td class="col-md-4"><%= creature.description %></td>
      <td class="col-md-2"><%= @cart.count_of(creature.id) %>
        <%= button_to "+", cart_path(add: creature.id), method: :put %>
        <%= button_to "-", cart_path(remove: creature.id), method: :put %></td>
        <td class="col-md-2"><%= number_to_currency(creature.price) %></td>
      <td class="col-md-2"><%= number_to_currency(@cart.subtotal(creature.id)) %></td>
    </tr>
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td>
      <% if @cart %>
        Total: <%= number_to_currency(@cart.total_price) %>
      <% else %>
        Total: $0.00
      <% end %>
      <td>
    </tr>
  </tbody>
  </table>
</div>




<div class="btn">
  <% if current_user %>
    <%= button_to "Checkout", orders_path(contents: session[:cart]), method: :create %>
  <% else %>
    <%= button_to "Login to Checkout", login_path, method: :get %>
    <%= button_to "Register to Checkout", new_user_path, method: :get %>
  <% end %>
</div>