<% @organizations.each do |organization| %>
  <%= organization.name %>
  <%= organization.status.capitalize %>
  <% if organization.status == "pending" %>
    <%= button_to "Activate", platform_organization_path(organization, name: "activated"), method: :put %>
    <%= button_to "Deny", platform_organization_path(organization, name: "denied"), method: :put %>
  <% elsif organization.status == "inactive"%>
    <%= button_to "Activate", platform_organization_path(organization, name: "activated"), method: :put %>
  <% else %>
    <%= button_to "Deactivate", platform_organization_path(organization, name: "deactivated"), method: :put %>
  <% end %>
<% end %>
