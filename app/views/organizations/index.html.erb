<strong><h1 class="page-title">Lending Hands</h1></strong>
<em><h4 class="mission-text">Lending Hands is a microlending service that believes in creating opportunities for individuals around the world.</em></h4>
<% if current_platform_admin? %>
  <h4><%= link_to "Manage Recipients", admin_recipients_path %></h4>
<% end %>

<% @organizations.each do |organization| %>
  <div class="container col-md-4 home-organization-wrapper" data-name=" <%= organization.name %> ">
    <%= render partial: "shared/organizations_img", locals: { organization: organization } %>
    <%= render partial: "shared/organizations_details", locals: { organization: organization } %>
  </div>
<% end %>
