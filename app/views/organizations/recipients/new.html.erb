<div class="form-horizontal">

  <%= form_for(@recipient) do |f| %>
    <div class="form-group">
      <%= f.label :name, { :class => "col-sm-4 form-label" } %>
      <div class="col-sm-4">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :description, { :class => "col-sm-4 form-label" } %>
      <div class="col-sm-8">
        <%= f.text_area :description %>
      </div>
    </div>

    <div class="form-group">
      <div class="dropdown">
      <%= f.label :country, { :class => "col-sm-4 form-label" } %>
      <div class="col-sm-8">
        <%= f.select :country, @countries, {}, { value: @recipient.country, :class => 'form-control'} %>
      </div>
    </div>
    </div>

    <div class="form-group">
      <%= f.label :image_path, { :class => "col-sm-4 form-label" } %>
      <div class="col-sm-8">
        <%= f.text_field :image_path %>
      </div>
    </div>

    <%= hidden_field_tag :organization_id, @organization.id %>

    <div class="col-sm-10">
      <center>
      <%= f.submit "Create Recipient" %>
    </center>
    </div>
  <% end %>

</div>
</body>
