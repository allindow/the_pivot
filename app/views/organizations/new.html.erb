<body class="login">
  
<div class="form-horizontal">
  
  <%= form_for(@organization) do |f| %>
    <div class="form-group">
      <%= f.label :name, { :class => "col-sm-1 form-label" } %>
      <div class="col-sm-3">
        <%= f.text_field :name %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :description, { :class => "col-sm-1 form-label" } %>
      <div class="col-sm-3">
        <%= f.text_field :description %>
      </div>
    </div>
    
    <div class="col-sm-offset-1 col-sm-10">
      <%= submit_tag ("Submit Organization Application") %>
      <!-- <%#= f.submit btn, { class: "btn-login" } %> -->
    </div>
  <% end %>

</div>
</body>