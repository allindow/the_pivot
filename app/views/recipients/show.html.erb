<div class="thumbnail col-md-12">
<div class="row">
  <div class="recipient-show col-md-6">
    <h3><%= @recipient.organization.name %></h3>
    <%= render partial: "shared/recipients_details", locals: { recipient: @recipient } %>
    <%= @recipient.amount_received %>
  </div>
  <div class="col-md-4">
    <% if @recipient.image_path %>
      <%= image_tag("#{@recipient.image_path}", width: 400) %>
    <% else %>
      <%= image_tag("#{@recipient.name}.png", width: 400) %>
    <% end %>
  </div>
</div>
</div>
