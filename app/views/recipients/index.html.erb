<em><h1 class="page-title">Lending Hands</h1></em>
<em><h2 class="page-subtitle">All Recipients</h2></em>
<% if current_platform_admin? %>
  <h4><%= link_to "Manage Recipients", admin_recipients_path %></h4>
<% end %>
</br>

<div class="search-bar">
  <label>Search:&nbsp;</label>
  <%= text_field :recipient, :filter_all %>
</div>
</br>

<% @recipients.each do |recipient| %>
  <div class='recipient' data-all="<%= recipient.name %> <%= recipient.country.name %> <%= recipient.organization.name %> <%= recipient.description %>">
    <div class="container col-md-4 home-recipient-wrapper" data-name="<%= recipient.name %>">
      <div class="organization-title-list">
        <p align="right"><%= link_to recipient.organization.name, organization_path(slug: recipient.organization.slug) %></p>
      </div>
      <%= render partial: "shared/recipients_img", locals: { recipient: recipient } %>
      <%= render partial: "shared/recipients_details", locals: { recipient: recipient } %>
    </div>
  </div>
<% end %>
