<body class="login">

<div class="form-horizontal">
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group">
      <%= f.label :username, { :class => "col-sm-1 form-label" } %>
      <div class="col-sm-3">
        <%= f.text_field :username %>
      </div>
    </div>
    
    <div class="form-group">
      <%= f.label :password, { :class => "col-sm-1 form-label" } %>
      <div class="col-sm-3">
        <%= f.password_field :password %>
      </div>
    </div>
    <div class="col-sm-offset-1 col-sm-10">
      <%= f.submit "Login", { class: "btn-login" } %>
    </div>
  <% end %>
</div>
</body>
