<div class="form">
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <%= f.submit "Login", { class: "btn-login" } %>
  <% end %>
</div>