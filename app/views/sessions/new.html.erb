<body class="login">

<div class="form-horizontal">
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="form-group">
      <%= f.label :username, { :class => "col-sm-4 form-label" } %>
      <div class="col-sm-4">
        <%= f.text_field :username %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, { :class => "col-sm-4 form-label" } %>
      <div class="col-sm-4">
        <%= f.password_field :password %>
      </div>
    </div>
    <div class="col-sm-10">
      <center>
      <%= f.submit "Login", { class: "btn-recipient" } %>
    </center>
    </div>
  <% end %>

  <div class="session-links">
  <center>
    <p>Not Registered? <%= link_to "Become a Lender", new_user_path %></p>
    <p>Want us to host your organization? <%= link_to "Click here", new_organization_path %></p>
  </center>
  </div>
</div>
</body>
