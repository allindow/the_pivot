<h1>Your Account</h1>

<%= render partial: "shared/user_profile" %>

<h3><%= current_user.username %>'s Funding History</h3>
<% if @funding %>
  <%= render partial: "funding_table", locals: { funding: @funding } %>
<% end %>

<h4>Previous Fundings:</h4>
  <ul class="col-md-4 list-group">
    <% current_user.fundings.each do |funding| %>
      <li class="list-group-item"><%= link_to "Funding #{funding.id}", funding_path(funding) %></li>
    <% end %>
  </ul>
