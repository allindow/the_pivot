<h2>Funding <%= funding.id %> Summary</h2>
<table class="table">
  <tr>
    <th>Recipient</th>
    <th>Quantity</th>
    <th>Price</th>
  </tr>
  <% funding.funding_details.each do |key, value| %>
    <tr>
      <th><%= link_to key, recipient_path(find_recipient(key)) %></th>
      <th><%= value.last %></th>
      <th><%= number_to_currency(value.first) %></th>
    </tr>
  <% end %>
  <tr>
    <th><strong>Total</strong></th>
    <th></th>
    <th><strong><%= number_to_currency(funding.total_price) %></strong></th>
  </tr>
</table>
