<em><h2 class="page-subtitle">Manage Creatures</h2></em>

  <% @creatures.each do |creature| %>
      <div class="container col-md-4 home-creature-wrapper">
        <div class="col-md-4 home-creature-img media">
          <% if creature.image_path %>  
            <img class="media img-index" src="<%= "#{creature.image_path}" %>" alt="...">
          <% else %>
            <img class="media img-index" src="<%="../assets/#{creature.name}.png" %>" alt="...">
          <% end %>
        <em><%= link_to "Edit #{creature.name}", edit_admin_creature_path(creature), class: "home-creature-name" %></em></p>    
      </div>
    </div>
  <% end %>