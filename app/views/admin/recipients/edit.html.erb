<h1>Edit Creature:</h1>

<div class="form">
  <%= form_for(@recipient, url: admin_recipient_path(@recipient)) do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>
    <div class="form-group">
      <%= f.label :image_path %>
      <%= f.text_field :image_path %>
    </div>
    <div class="form-group">
      <%= f.label :retired %>
      <%= f.text_field :retired %>
    </div>
    <%= f.submit "Update" %>
  <% end %>
</div>